@model NetsizeWorldCup.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="row">
    <div class="col-md-7">
        <section class="widget">
            <header>
                <h4><i class="fa fa-user"></i> Account Profile <small>Forgot Password</small></h4>
            </header>
            <div class="body">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal label-left", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <blockquote>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </blockquote>
                    @Html.HiddenFor(model => model.Code)
                    <fieldset>
                        <div class="control-group">
                            <div class="controls form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-sm-8">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                <div class="col-sm-8">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Reset" />
                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
