@using Microsoft.AspNet.Identity
<div class="navbar">
    <ul class="nav navbar-nav navbar-right pull-right">
        @if (Request.IsAuthenticated)
        {
            <li class="hidden-xs">
                <a href="@Url.Action("Manage", "Account", routeValues: null)" id="settings"
                   title="Settings"
                   data-toggle="popover"
                   data-placement="bottom">
                    <i class="fa fa-cog"></i>
                </a>
            </li>
            <li class="hidden-xs dropdown">
                <a href="#" title="Account" id="account"
                   class="dropdown-toggle"
                   data-toggle="dropdown">
                    <i class="fa fa-user"></i>
                </a>
                <ul id="account-menu" class="dropdown-menu account" role="menu">
                    <li role="presentation" class="account-picture">
                        @User.Identity.Name
                    </li>
                    <li role="presentation">
                        <a href="@Url.Action("Manage", "Account", routeValues: null)" class="link">
                            <i class="fa fa-user"></i>
                            Profile
                        </a>
                    </li>
                </ul>
            </li>
            <li class="hidden-xs">
                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i></a>
            </li>
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                //test
                @Html.AntiForgeryToken();
            }
        }
        else
        {
            <li class="hidden-xs">
                <a href="@Url.Action("Register", "Account", routeValues: null)" id="registerLink"
                   title="Register"
                   data-toggle="popover"
                   data-placement="bottom">
                    <i class="fa fa-cog"></i>
                </a>
            </li>
            <li class="hidden-xs">
                <a href="@Url.Action("Login", "Account", routeValues: null)" id="loginLink"
                   title="Log in"
                   data-toggle="popover"
                   data-placement="bottom">
                    <i class="fa fa-power-off"></i>
                </a>
            </li>
        }
    </ul>
</div>