@model IEnumerable<NetsizeWorldCup.Team>

@{
    ViewBag.Title = "Teams";
}

<div class="col-md-12 col-sm-12 col-lg-6">
    <section class="widget">
        <header>
            <h4>
                <i class="fa fa-table"></i>
                Teams
            </h4>
        </header>
        <div class="body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="hidden-xs-portrait">#</th>
                        <th>@Html.DisplayNameFor(model => model.FlagUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="hidden-xs-portrait">
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                <img src="@item.FlagUrl" style="box-shadow: 0px 0px 10px #888;border-radius: 5px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>